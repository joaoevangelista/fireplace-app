<p id="notice"><%= notice %></p>

<h1>Listing Severity Levels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @severity_levels.each do |severity_level| %>
      <tr>
        <td><%= severity_level.name %></td>
        <td><%= severity_level.color %></td>
        <td><%= link_to 'Show', severity_level %></td>
        <td><%= link_to 'Edit', edit_severity_level_path(severity_level) %></td>
        <td><%= link_to 'Destroy', severity_level, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

