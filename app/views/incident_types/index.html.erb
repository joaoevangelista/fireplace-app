<div class="container spaced">
  <div class="row">
    <div class="col-sm-12">
      <div class="pull-right">
        <% if current_user %>
        <%= link_to icon('plus', 'New Incident Type', class: 'fa-fw'), new_incident_type_path %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= render 'layouts/notice', notice: notice %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h1 class="text-center">Listing Incident Types</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @incident_types.each do |incident_type| %>
            <tr>
              <td><%= incident_type.name %></td>
              <td><%= link_to icon('eye'), incident_type, class: 'text-info' %></td>
              <% if current_user %>
              <td><%= link_to icon('pencil'), edit_incident_type_path(incident_type), class: 'text-muted' %></td>
              <td><%= link_to icon('times'), incident_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= paginate @incident_types %>
    </div>
  </div>
</div>
