<p id="notice"><%= notice %></p>

<h1>Listing Incident Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incident_types.each do |incident_type| %>
      <tr>
        <td><%= incident_type.name %></td>
        <td><%= link_to 'Show', incident_type %></td>
        <td><%= link_to 'Edit', edit_incident_type_path(incident_type) %></td>
        <td><%= link_to 'Destroy', incident_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

