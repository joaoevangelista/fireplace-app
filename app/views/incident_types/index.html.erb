<div class="container spaced">
  <div class="row">
    <div class="col-xs-12">
      <div class="pull-xs-right">
        <%= link_to icon('plus', 'New Incident Type', class: 'fa-fw'), new_incident_type_path %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= render 'layouts/notice', notice: notice %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-xs-center">Listing Incident Types</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @incident_types.each do |incident_type| %>
          <tr>
            <td><%= incident_type.name %></td>
            <td><%= link_to icon('eye'), incident_type %></td>
            <td><%= link_to icon('pencil'), edit_incident_type_path(incident_type) %></td>
            <td><%= link_to icon('times'), incident_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
