<div class="container spaced">
  <div class="row">
    <div class="col-sm-12">
      <div class="pull-left">
        <%= link_to icon('chevron-left', 'Back', class: 'fa-fw'), incident_types_path %>
      </div>
      <div class="pull-right">
        <%= link_to icon('pencil', 'Edit', class: 'fa-fw'), edit_incident_type_path(@incident_type) %>
      </div>
    </div>
  </div>
  <div class="row col-sm-12">
    <%= render 'layouts/notice', notice: notice %>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h1 class="text-center">Incidents of <%= @incident_type.name %></h1>
    </div>
  </div>
  <% if @incident_type.incidents.empty? %>
  <div class="row">
    <div class="col-sm-12">
      <p class="lead text-center text-muted">No incidents of this type reported yet.</p>
    </div>
  </div>
  <% else %>
  <div class="row">
    <div class="col-sm-12">
      <table class="table">
        <thead>
          <tr>
            <th>When</th>
            <th>Action Taken</th>
            <th>Location</th>
            <th>Open ?</th>
            <th>Reporter</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
            <% @incident_type.incidents.each do |incident| %>
            <tr>
              <td>incident.created_at</td>
              <td>incident.action_taken</td>
              <td>incident.location</td>
              <td>
                <% if incident.open %>
                <%= icon('check', 'text-success') %>
                <% else %>
                <% icon('times', 'text-danger') %>
                <% end %>
              </td>
              <td>incident.user.name</td>
              <td><%= link_to icon('eye'), incident %></td>
              <td><%= link_to icon('pencil'), edit_incident_path(incident) %></td>
              <td><%= link_to icon('times'), incident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <% end %>
</div>
