<div class="container spaced">
  <div class="row">
    <div class="col-sm-12">
      <div class="pull-left">
        <%= link_to icon('chevron-left', 'Back', class: 'fa-fw'), roles_path %>
      </div>
      <% if current_user %>
        <div class="pull-right">
          <%= link_to icon('eye', 'See users', 'fa-fw'), @role %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= render 'layouts/notice', notice: notice %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h1 class="text-center">Editing Role</h1>
    </div>
  </div>
  <%= render 'form' %>
</div>
